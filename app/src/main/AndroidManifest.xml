<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hotel.user">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/hoterllogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/hoterllogo"
        android:supportsRtl="true"
        android:theme="@style/noActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name="com.hotel.user.activity.PropertyView" android:parentActivityName="com.hotel.user.activity.PropertySearch"></activity>
        <activity
            android:name="com.hotel.user.activity.PropertySearch"
            android:parentActivityName="com.hotel.user.activity.SearchActivity" />
        <activity
            android:name="com.hotel.user.activity.SearchActivity"
            android:parentActivityName="com.hotel.user.activity.Home" />
        <activity
            android:name="com.hotel.user.activity.OpenWebView"
            android:parentActivityName="com.hotel.user.activity.Home"
            android:theme="@style/noActionBar" />
        <activity
            android:name="com.hotel.user.activity.PaymentHistoryForBooking"
            android:theme="@style/noACtionBarHome" />
        <activity android:name="com.hotel.user.activity.Complaints" />
        <activity android:name="com.hotel.user.activity.HoseKeepingSchedule" />
        <activity
            android:name="com.hotel.user.activity.SingleFod"
            android:theme="@style/noActionBarWithTransparent" />
        <activity android:name="com.hotel.user.TestAnim" />
        <activity
            android:name="com.hotel.user.activity.PaymentByBooking"
            android:parentActivityName="com.hotel.user.activity.Home" />
        <activity
            android:name="com.hotel.user.activity.Home"
            android:theme="@style/noACtionBarHome" />
        <activity
            android:name="com.hotel.user.activity.OtpVerify"
            android:parentActivityName="com.hotel.user.activity.Login"
            android:theme="@style/noActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.hotel.user.activity.Login"
            android:theme="@style/noActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.hotel.user.MainActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>