<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingBottom="@dimen/size_32"
        android:background="@drawable/back_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/hoterllogo"
            android:id="@+id/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/size_180"
            android:layout_height="120dp"/>
        <TextView
            android:textSize="@dimen/size_18"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="@string/you_live_we_care"
            android:id="@+id/logo_text"
            app:layout_constraintTop_toBottomOf="@id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <androidx.cardview.widget.CardView
            app:cardUseCompatPadding="true"
            android:clipToPadding="true"
            android:elevation="10sp"
            app:layout_constraintTop_toBottomOf="@id/logo_text"
            app:cardCornerRadius="@dimen/padding_28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/search_bar"
                android:hint="@string/search_near_by"
                android:drawableTint="@color/dark_grey"
                android:focusable="false"
                android:drawablePadding="@dimen/padding_4"
                android:drawableStart="@drawable/search_icon"
                android:background="@drawable/round_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>







</androidx.coordinatorlayout.widget.CoordinatorLayout>