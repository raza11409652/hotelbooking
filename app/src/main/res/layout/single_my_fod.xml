<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/details_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgound"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="0sp"
                android:layout_height="@dimen/size_100"
                android:layout_marginLeft="@dimen/size_8"
                android:layout_marginTop="@dimen/size_52"
                android:layout_weight="0.8"
                app:cardCornerRadius="@dimen/size_24"
                app:cardElevation="@dimen/size_0">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_100"
                    android:scaleType="centerCrop"
                    android:src="@drawable/single_property_fod"></ImageView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:orientation="vertical"
                android:padding="@dimen/parent_padding">

                <TextView
                    android:id="@+id/property_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_48"
                    android:text="property name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_16"></TextView>

                <TextView
                    android:id="@+id/room_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="room number"
                    android:textColor="@color/white"></TextView>

                <Button
                    android:id="@+id/view"
                    style="@style/white_btn_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/size_4"
                    android:text="view"></Button>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>