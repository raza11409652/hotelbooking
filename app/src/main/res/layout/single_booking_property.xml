<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    app:cardCornerRadius="@dimen/size_8"
    app:cardElevation="@dimen/size_0"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_8">

        <TextView
            android:id="@+id/booking_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BOOKING NUMBER"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chip_yellow"
            android:text="status"
            android:textColor="@color/text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/property_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_26"
            android:text="PROPERTY NAME"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/booking_number"></TextView>

        <TextView
            android:id="@+id/booking_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:drawableStart="@drawable/calander"
            android:drawablePadding="@dimen/size_4"
            android:drawableTint="@color/grey_black"
            android:text="booking period"
            android:textColor="@color/grey_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/property_name"></TextView>

        <TextView
            android:id="@+id/booking_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:drawableStart="@drawable/indian_currnecy"
            android:drawablePadding="@dimen/size_4"
            android:drawableTint="@color/dark_grey"
            android:text="Booking TIME"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/size_12"
            app:layout_constraintTop_toBottomOf="@id/booking_period"></TextView>

        <Button
            android:id="@+id/payment"
            style="@style/FlatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/booking_amount"></Button>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>