        <item name="android:textColorPrimaryInverse">@color/grey_black</item>
        <item name="android:textColor">@color/grey_black</item>

    </style>

    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@drawable/bottom_sheet_bg</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">

